{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "python": {}
    },
    "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "gunicorn -w 4 -b 0.0.0.0:5000 app:app",
    "healthcheckPath": "/",
    "restartPolicy": "on-failure",
    "maxRestartRetries": 10
  }
}
