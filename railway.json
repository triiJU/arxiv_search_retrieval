{
  "build": {
    "builder": "Nixpacks",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["mesa", "mesa.drivers", "mesa.libGL", "libglvnd"]
        },
        "install": {
          "cmds": [
            "pip install -r requirements.txt"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "gunicorn app:app --bind 0.0.0.0:5000"
  },
  "envs": {
    "HUGGINGFACE_API_KEY": "your_hf_token"
  }
}
